<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mr9.signinform.SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sucess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/bot_pad"
            android:paddingLeft="@dimen/left_pad"
            android:paddingRight="@dimen/right_pad"
            android:paddingTop="@dimen/top_pad"
            android:text="Registration Successful !!"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="@dimen/top_pad"
            android:paddingBottom="@dimen/bot_pad"
            android:paddingLeft="@dimen/left_pad"
            android:paddingRight="@dimen/right_pad"/>

        <TextView
            android:id="@+id/em"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email ID:"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="@dimen/top_pad"
            android:paddingBottom="@dimen/bot_pad"
            android:paddingLeft="@dimen/left_pad"
            android:paddingRight="@dimen/right_pad"/>

        <TextView
            android:id="@+id/mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile no.:"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="@dimen/top_pad"
            android:paddingBottom="@dimen/bot_pad"
            android:paddingLeft="@dimen/left_pad"
            android:paddingRight="@dimen/right_pad" />

        <TextView
            android:id="@+id/con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country:"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="@dimen/top_pad"
            android:paddingBottom="@dimen/bot_pad"
            android:paddingLeft="@dimen/left_pad"
            android:paddingRight="@dimen/right_pad" />

        <TextView
            android:id="@+id/stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State:"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="@dimen/top_pad"
            android:paddingBottom="@dimen/bot_pad"
            android:paddingLeft="@dimen/left_pad"
            android:paddingRight="@dimen/right_pad" />

        <TextView
            android:id="@+id/bdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOB:"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="@dimen/top_pad"
            android:paddingBottom="@dimen/bot_pad"
            android:paddingLeft="@dimen/left_pad"
            android:paddingRight="@dimen/right_pad" />

        <Button
            android:id="@+id/try_again"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Registration"/>

    </LinearLayout>

</LinearLayout>
